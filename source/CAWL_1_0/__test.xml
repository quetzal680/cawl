<?xml version="1.0" encoding="UTF-8"?>
<CAWL name="MTRoomService" version="1.0.1" targetNamespace="RobotServiceTest">
	<documentation>Meeting Room Services using LEGO Robots</documentation>
	<baseOntologies>
		<ontology namespace="http://ss.ssu.ac.kr/Ontology" location="http://ss.ssu.ac.kr/Ontology/CAWL"/>
	</baseOntologies>

	<serviceProvider name="ssCom" type="Company" >
		<locator type="static"/>
	</serviceProvider>
	
	<activator name="MTRoomServiceActivator">
		<condition expression="C1">
			<context>
				<rule contribute="positive">
					<constraint name="C1">
						<subject type="Person">?=var4MTRoomService/personName</subject>
						<verb>isLocated</verb>
						<object type="Room">?=var4MTRoomService/officeRoomNum</object>
					</constraint>
				</rule>
			</context>
		</condition>
		<activate flow="MTRoomServiceFlow"/>
		<activate flow="MusicTeaRobotServiceFlow"/>
	</activator>
	
	<flow name="MTRoomServiceFlow">
		<source>
		</source>

		<node name="N1">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N2">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N3">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N4">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N5">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N6">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
			</condition>
		</node>

		<node name="N7">
			<condition expression="C1">
				<context>
					<rule contribute="positive">
						<constraint name="C1">
							<subject type="Robot">?var4MTRoomService/robot1</subject>
							<verb>isLocated</verb>
							<object type="Room">?=var4MTRoomService/meetingRoomNum</object>
						</constraint>
					</rule>
				</context>
